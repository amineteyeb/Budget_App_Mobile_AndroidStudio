<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with transparent interior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Border with rounded corners -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Radius for rounded corners (adjust as needed) -->
            <stroke
                android:width="4dp"
            android:color="#000000" /> <!-- Border color (black) -->
        </shape>
    </item>
</layer-list>
